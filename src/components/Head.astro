---
/** Head component */
import { ClientRouter } from "astro:transitions";
// Example: Construct a canonical URL using your production domain
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
// Example: Construct a URL for SEO meta tags using your current domain
const socialImageURL = new URL("/images/preview.webp", Astro.url);
import { getSiteSettings } from "../utils/api";

const siteSettings = await getSiteSettings();

//const {settings } = Astro.props;
//const { title = "My Astro Website", ...props } = Astro.props;
---

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <link
    rel="icon"
    href="/logos/favicon-black.svg"
    media="(prefers-color-scheme: light)"
    type="image/svg+xml"
  />
  <link
    rel="icon"
    href="/logos/favicon-white.svg"
    media="(prefers-color-scheme: dark)"
    type="image/svg+xml"
  />
  <link rel="icon" href="/logos/favicon-black.svg" type="image/svg+xml" />

  <!-- generator provides the current version of Astro your project is running. -->
  <meta name="generator" content={Astro.generator} />
  <link rel="sitemap" href="/sitemap-index.xml" />
  <meta name="robots" content="noindex,nofollow" />
  <meta
    name="googlebot-news"
    content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1"
  />
  <title>{siteSettings.title ? siteSettings.title : "My Astro Website"}</title>

  <!-- Web analytics -->

  <link rel="canonical" href={canonicalURL} />
  <meta
    name="description"
    content="HTML tags are crucial for SEO more than ever before. In this post, Iâ€™m sharing the top 10 HTML meta tags you need to know."
  />

  <!-- Open Graph tags -->
  <!-- Here, you put the title to which you want to be displayed when your page is linked. -->
  <meta property="og:title" content="Faith Angels" />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="http://www.example.com/" />
  <meta
    property="og:description"
    content="Restoring Hope for Our Seniors, One Act of Kindness at a Time"
  />
  <meta property="og:image" content={socialImageURL} />
  <meta property="og:image:alt" content="" />
  <ClientRouter />
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/swiper@12/swiper-bundle.min.css"
  />
  <script type="module" src="/src/main.jsx"></script>
</head>
