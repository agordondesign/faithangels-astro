---
import "../styles/global.css";
import ContactForm from "./ContactForm";
//contact
---

<section class="w-screen mx-auto py-16 lg:py-30 bg-stone-200 px-6 lg:px-8">
  <div class="mx-auto max-w-7xl">
    <div class="grid grid-cols-1 gap-8 md:grid-cols-2">
      <div>
        <h2>Get in touch</h2>

        <p class="mt-6 max-w-xl">
          Whether you’d like to donate, volunteer, or learn more about our work,
          we’d love to hear from you. Together, we can continue bringing care,
          dignity, and hope to our senior community.
        </p>

        <dl class="mt-6 space-y-3">
          <div>
            <dt class="sr-only">Phone number</dt>

            <dd class="flex items-center gap-4">
              <div
                class="shrink-0 rounded-lg bg-stone-300 p-2 text-primary-brown"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="w-8 h-8"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M10.5 1.5H8.25A2.25 2.25 0 0 0 6 3.75v16.5a2.25 2.25 0 0 0 2.25 2.25h7.5A2.25 2.25 0 0 0 18 20.25V3.75a2.25 2.25 0 0 0-2.25-2.25H13.5m-3 0V3h3V1.5m-3 0h3m-3 18.75h3"
                  ></path>
                </svg>
              </div>
              <span class="font-medium">+1 (555) 123-4567</span>
            </dd>
          </div>

          <div>
            <dt class="sr-only">Email</dt>

            <dd class="flex items-center gap-4">
              <div
                class="shrink-0 rounded-lg bg-stone-300 p-2 text-primary-brown"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="w-8 h-8"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75"
                  ></path>
                </svg>
              </div>
              <a
                href="mailto:info@faith-angel.com"
                class="text-primary-green hover:text-primary-green/80"
                >info@faith-angel.com</a
              >
            </dd>
          </div>

          <div>
            <dt class="sr-only">Location</dt>

            <dd class="flex items-center gap-4">
              <div
                class="shrink-0 rounded-lg bg-stone-300 p-2 text-primary-brown"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="w-8 h-8"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="m2.25 12 8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25"
                  ></path>
                </svg>
              </div>
              <span>Montego Bay, Jamaica</span>
            </dd>
          </div>
        </dl>
      </div>

      <ContactForm client:only="react" />
    </div>
  </div>
</section>
